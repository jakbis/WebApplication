@model WebProject.Models.Users

@{
    ViewData["Title"] = "SignIn";
    Layout = "_LoginLayout";
}

@section styles{

    <link rel="stylesheet" href="~/css/signin_signup.css" />
}


<div class="control-label"> <a class="btn btn-light" style="font-size:20px;color:hotpink;display:flw" href="/home/index">Watch as a guest</a> </div>


<div class="login-wrap">
    <div class="login-html">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" data-type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            &emsp;
            <div class="form-group">
                <input type="submit" value="SignIn" class="btn btn-light" style="font-size:25px;color:hotpink;" />
            </div>
            &emsp;
            <div class="control-label">Not Registered? <a class="btn btn-light" style="font-size:20px;color:hotpink;" href="/Users/SignUp">Click Here </a> </div>

            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>

            }
        </form>
    </div>


</div>
<style>
    body {
        background-image: url("https://cdn.pixabay.com/photo/2020/10/20/21/53/donuts-5671538_1280.jpg");
        background-attachment: fixed;
    }
</style>
<head>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

</head>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


