<div class="login-wrap">
    @*<div class="login-wrap">
        <div class="login-html">*@
    @*<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab" style="font-size:30px;">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="font-size:30px;">Sign Up</label>*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="login-wrap">
        <div class="login-html">
            <form asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Username</label>
                    <input asp-for="Username" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" data-type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password" class="control-label">Repeat Password</label>
                    <input for="Password" class="form-control" data-type="password">
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email Address</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="SignUp" class="btn btn-light" style="font-size:25px;color:hotpink;" />
                </div>
                <div class="control-label">Already registerd? <a class="btn btn-light" style="font-size:20px;color:hotpink;" asp-action="SignIn">Click Here </a> </div>


                @if (ViewBag.Error != null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
            </form>
        </div>
    </div>
</div>
