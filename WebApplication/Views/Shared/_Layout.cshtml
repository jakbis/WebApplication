@RenderSection("scripts", required: false)
@RenderSection("styles", required: false)
<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="search-filter.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/layout_home.css" />
    <link rel="stylesheet" href="~/css/search-filter.css" />
</head>
<body>
    <!-- שורת שליטה למעלה -->
    <nav class="navbar navbar-expand-lg navbar-light d-md-block" style="background-color:white;">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="        position: relative;
        left: 10px;
        white-space: nowrap;
        height: 56px;
">Buy & Cook</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            &nbsp;
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <a href="/Home/Index">
                        <button id="buttoncol" type="button" class="btn btnregular btn-outline-light" style="    background-color: palevioletred !important;
    font-weight: bold !important;">דף הבית</button>
                    </a>
                    &nbsp;
                    <a href="/Categories/Index">
                        <button id="buttoncol" type="button" class="btn btnregular btn-outline-light" style="    background-color: palevioletred !important;
    font-weight: bold !important;">קטגוריות</button>
                    </a>
                    &nbsp;


                    <a href="/Home/Privacy">
                        <button id="buttoncol" type="button"  class="btn btnregular btn-outline-light" style="    background-color: palevioletred !important;
    font-weight: bold !important;">
                            תקנון האתר
                        </button>
                    </a>
                    &nbsp;
                    <form asp-controller="Recipes" asp-action="Index">

                        <div class="input-group">
                            
                                <input class="btn-search border-dark" type="text" id="table_filter" name="table_filter" required min="1">
                            
                            &nbsp;
                            <select class="choiceStyle" name="filter" id="filter" required>
                                <option value="All">הכל</option>
                                <option value="Nomilk">ללא חלב</option>
                                <option value="Nogluten">ללא גלוטן</option>
                            </select>
                            &nbsp;
                            <button type="submit" value="Search" class="btn btnregular btn-outline-light" style="    background-color: palevioletred !important;
    font-weight: bold !important;">
                                Search
                            </button>

                        </div>
                    </form>
                    &nbsp;
                    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
                    @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                    {

                        <a href="/CreditCards/Edit">
                            <button id="buttoncol" type="button" class="btn btnregular btn-outline-light" style="    background-color: palevioletred !important;
    font-weight: bold !important;">
                                אמצעי תשלום
                            </button>
                        </a>
                    }
                    &nbsp;
                    @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                    {
                        <a class="btn" asp-area="" asp-controller="Users" asp-action="LogOut" style="        font-size: medium;
        background-color: palevioletred !important;
        font-weight: bold !important;
        height: 40px;
        color: aliceblue;
  ">התנתק</a>
                    }
                    else
                    {
                        <a class="btn" asp-area="" asp-controller="Users" asp-action="SignIn" style="        font-size: medium;
        background-color: palevioletred !important;
        font-weight: bold !important;
        height: 37px;
        color: aliceblue;
  ">התחבר</a>
                    }
</div>
        </div>
    </nav>

    <!-- כאן יימצא גוף הדף -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>



<!-- שורת שליטה למטה -->

